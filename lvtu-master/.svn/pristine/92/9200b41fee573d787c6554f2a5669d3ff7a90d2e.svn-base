        switch (type) {
            case 'myyouji':
                myyoujiCallBack(ret, err);
                break;
            case 'favoryouji':
                favoryoujiCallBack(ret, err)
                break;
            case 'stamp':
                stampCallBack(ret, err)
                break;
        }
    })
}         

