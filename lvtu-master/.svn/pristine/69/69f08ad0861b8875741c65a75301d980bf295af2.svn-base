*{
	box-sizing: border-box;
	margin:0px;
	padding:0px;
}
body{

   background-color: #F8F8F8;
}
a{
	text-decoration: none;
}
#login-page{
	width:100%;
	height:100%;
}
h1{
	width:100%;
	height:10%;
	text-align: center;
	font-size:30px;
	padding:30px;
	border-bottom: 1px solid #000;
}
#content{
	width:100%;
	padding:50px 10%;
}
#login-form{
	width:100%;
}
form>div{
	width:100%;
	height:120px;
	padding:20px;
	border-bottom: 2px solid #000;
}
label,input[type="text"],input[type="password"]{
	display:inline-block;
	height:100%;
	/*line-height: 100%;*/
	text-align: left;
	font-size: 20px;
}
input[type="text"],input[type="password"]{
	border:none;
	width:50%;
	outline:none;
}
label{
	width:30%;
}
.login-btn{
	width:80%;
	height:80px;
	margin:30px 10%;
	background:#5e8d1d;
	color:#fff;
	font-size:35px;
	text-align: center;
	line-height: 80px;
	border-radius:10px;
}
.warn{
	display: block;
	width:100%;
	height:80px;
	padding:20px 0;
	color:grey;
	font-size:15px;
	text-align: center;


}


