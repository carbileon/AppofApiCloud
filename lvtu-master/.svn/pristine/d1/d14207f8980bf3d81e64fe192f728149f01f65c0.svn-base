 /*header*/		
.header {		
    display: -webkit-box;		
    display: -webkit-flex;		
    display: flex;		
    border-bottom: 1px solid #E5E5E5;		
    -webkit-box-pack: center;		
    -webkit-box-align: center;		
    background-color: #E5E5E5;		
}		
.header-title {		
    -webkit-box-flex: 1;		
    -webkit-flex: 1;		
    flex: 1;
}		



.header a {		
    display: block;		
    background-size: 20px;		
    padding: 20px;		
    background-repeat: no-repeat;		
    background-position: center;		
}	

