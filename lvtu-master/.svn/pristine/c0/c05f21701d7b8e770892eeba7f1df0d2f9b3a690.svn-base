function modifyphoto(){	
	
	api.getPicture({
	    sourceType: 'album',
	    encodingType: 'png',
	    mediaValue: 'pic',
	    destinationType: 'url',
	    allowEdit: true,
	    quality: 60,
	    targetWidth: 100,
	    targetHeight: 100,
	    saveToPhotoAlbum: true
		}, function(ret, err){ 
		    if (ret) {
		    
		    	var picurl = ret.data;	    
		    	if(picurl!=null){
					$api.byId("userphoto").src=picurl;
		    	}
		        //api.alert({msg:ret.data});
		    } else{
		        api.alert({msg:err.msg});
		    };
		});
}


